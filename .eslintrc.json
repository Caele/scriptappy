{
  "root": true,
  "env": {
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "arrow-parens": "off",
    "no-underscore-dangle": "off",
    "max-len": "off",
    "no-use-before-define": "off"
  },
  "overrides": [
    {
      "files": ["**/*.spec.js"],
      "env": {
        "browser": false,
        "node": true,
        "mocha": true
      },
      "globals": {
        "chai": false,
        "expect": false,
        "sinon": false,
        "aw": false
      }
    }
  ]
}
