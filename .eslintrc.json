{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "no-plusplus": 0,
    "no-use-before-define": 0,
    "no-underscore-dangle": 0,
    "prettier/prettier": 2
  },
  "overrides": [
    {
      "files": ["packages/scriptappy-schema/**"],
      "rules": {
        "import/no-extraneous-dependencies": [2, { "devDependencies": true }]
      }
    },
    {
      "files": ["**/*.spec.js"],
      "plugins": ["mocha"],
      "rules": {
        "mocha/no-exclusive-tests": 2
      },
      "env": {
        "node": true,
        "mocha": true
      },
      "globals": {
        "chai": false,
        "expect": false,
        "sinon": false,
        "aw": false
      }
    }
  ]
}
